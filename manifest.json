{
  "manifest_version": 2,
  "name": "Twitch Chat Overlay",
  "version": "0.1.1",
  "icons": {"128": "icon-small.png"},
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "css": ["twitch-chat-overlay.css"]
    }
  ],
  "background": { "scripts": ["background.js"] },
  "browser_action": {
    "default_icon": "icon-small.png"
  },
  "permissions": ["activeTab", "webview"]
}
